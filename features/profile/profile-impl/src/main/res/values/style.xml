<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButton">
        <item name="android:layout_weight">100</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/dark2</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:radius">50dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/stroke_2</item>
        <item name="colorAccent">@color/stroke_2</item>
        <item name="colorControlActivated">@color/main_active</item>
    </style>
</resources>