<?xml version="1.0" encoding="utf-8"?>
<io.fasthome.fenestram_messenger.uikit.custom_view.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_reply" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/message_rectangle_receive"
            android:minWidth="48dp"
            android:minHeight="24dp"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            app:barrierMargin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/blue_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_arrow"
                app:layout_constraintTop_toBottomOf="@+id/username"
                tools:viewBindingIgnore="true" />

            <TextView
                android:id="@+id/username"
                style="@style/Text.Light.14sp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сергей Сергеевич"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/forward_author_name"
                style="@style/Text.Blue.14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/blue_line"
                app:layout_constraintTop_toTopOf="@+id/blue_line"
                tools:text="Мария Сергеева" />


            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_action_forward"
                android:tint="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/blue_line"
                tools:ignore="UseAppTint" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reply_document_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxWidth="300dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/forward_author_name"
                app:layout_constraintTop_toBottomOf="@+id/forward_author_name">

                <ImageView
                    android:id="@+id/document_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="15dp"
                    android:alpha="0.3"
                    android:background="@drawable/bg_image_document"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_document_message"
                    app:layout_constraintEnd_toEndOf="@+id/document_bg"
                    app:layout_constraintStart_toStartOf="@+id/document_bg"
                    app:layout_constraintTop_toTopOf="@id/document_bg" />

                <LinearLayout
                    android:id="@+id/ll_meta_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minWidth="150dp"
                    android:orientation="vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/document_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/document_bg"
                    app:layout_constraintTop_toTopOf="@+id/document_bg">

                    <TextView
                        android:id="@+id/file_name"
                        style="@style/Text.White.14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxEms="10"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/document_bg"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="9a4ccsawkefewf kwek wefd.zip" />

                    <TextView
                        android:id="@+id/file_size"
                        style="@style/Text.Gray.12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/file_name"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/file_name"
                        app:layout_constraintTop_toBottomOf="@id/file_name"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="0/10 Мб" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/progress_bar_hooli"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/file_size"
                        app:layout_constraintWidth_min="80dp" />


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geometria"
                android:maxEms="16"
                tools:visibility="gone"
                android:text="@string/MessageContentCheck"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/forward_author_name"
                app:layout_constraintTop_toBottomOf="@+id/forward_author_name"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/forward_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxWidth="300dp"
                android:minWidth="200dp"
                android:minHeight="175dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/forward_author_name"
                app:layout_constraintTop_toBottomOf="@+id/forward_author_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/send_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/timeviewcheck"
            android:textColor="@color/gray1"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_message_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</io.fasthome.fenestram_messenger.uikit.custom_view.SwipeRevealLayout>
