<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileGuestName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/geometria</item>
    </style>

    <style name="ProfileGuestNickName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/main_active</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileGuestFileText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/geometria</item>
    </style>

    <style name="ProfileGuestFileHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileGuestFileCountText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/geometria</item>
    </style>

    <style name="ProfileGuestMoreImages" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileGuestDeleteChat" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


</resources>