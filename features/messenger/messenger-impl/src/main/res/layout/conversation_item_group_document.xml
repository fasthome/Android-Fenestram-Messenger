<?xml version="1.0" encoding="utf-8"?>
<io.fasthome.fenestram_messenger.uikit.custom_view.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_reply" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_avatar_placeholder"
            app:layout_constraintBottom_toBottomOf="@+id/message_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:maxWidth="300dp"
            android:background="@drawable/message_rectangle_receive"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/username"
                style="@style/Text.Light.14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:paddingTop="5dp"
                android:text="Мария Сергеевна"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/document_bg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:padding="10dp"
                android:src="@drawable/ic_document_message"
                android:background="@drawable/bg_image_document"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/message_content"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <LinearLayout
                android:id="@+id/ll_meta_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxWidth="220dp"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/document_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/document_bg"
                app:layout_constraintTop_toTopOf="@+id/document_bg">

                <TextView
                    android:id="@+id/file_name"
                    style="@style/Text.White.14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxEms="10"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/document_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="9a4cca46-6c98-11ed-a1eb-0242ac120002.zip" />

                <TextView
                    android:id="@+id/file_size"
                    style="@style/Text.Gray.12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/file_name"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/file_name"
                    app:layout_constraintTop_toBottomOf="@id/file_name"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="0/10 Мб" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:minWidth="170dp"
                    android:progressDrawable="@drawable/progress_bar_hooli"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/file_size"
                    app:layout_constraintWidth_min="80dp" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/send_time_view"
            style="@style/Text.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="@string/timeviewcheck"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/message_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</io.fasthome.fenestram_messenger.uikit.custom_view.SwipeRevealLayout>