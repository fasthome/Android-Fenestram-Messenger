<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContactsHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/contacts_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/geometria</item>
    </style>

    <style name="ContactNameAndAddFirst" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/contact_name_empty_text_size</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EmptyViewText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">@dimen/contact_name_empty_text_size</item>
        <item name="android:fontFamily">@font/geometria</item>
    </style>

    <style name="SearchView" parent="Theme.AppCompat">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textColorHint">@color/text1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="PhoneNumberInput">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/contact_add_input_text_size</item>
        <item name="android:inputType">phone</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:background">@drawable/bg_rounded_edittext</item>
    </style>
</resources>