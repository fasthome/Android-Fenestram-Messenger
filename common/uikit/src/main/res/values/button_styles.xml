<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:background">@drawable/background_dialog_button</item>
    </style>

    <style name="Button.Dialog.Cancel">
        <item name="android:textAppearance">@style/Text.Gray.14sp</item>
    </style>

    <style name="Button.Dialog.Accept">
        <item name="android:textAppearance">@style/Text.Red.14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CornersShapeRounded10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="BottomActionDialogButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/DarkButtonThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/CornersShapeRounded10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="iconTint">@color/gray2</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DarkButtonThemeOverlay">
        <item name="colorPrimary">@color/dark2</item>
    </style>

</resources>