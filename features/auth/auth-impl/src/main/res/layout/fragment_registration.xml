<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <TextView
        android:id="@+id/label_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"

        android:text="Добро пожаловать в FENESTRAM!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_welcome"

        android:layout_marginTop="30dp"
        android:background="@drawable/ic_baseline_account_circle_24"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_add_circle_24"

        android:padding="20dp"

        app:layout_constraintBottom_toBottomOf="@id/user_photo"
        app:layout_constraintEnd_toEndOf="@id/user_photo"
        />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Имя"
        android:textColor="@color/labels"
        android:textSize="15sp"
        android:fontFamily="@font/geometria"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name_input"/>

    <EditText
        android:id="@+id/name_input"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/labels"
        android:padding="10dp"
        android:fontFamily="@font/geometria"
        android:textSize="20sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_photo"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/rounded_border"
        />

    <TextView
        android:id="@+id/label_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Никнейм"
        android:textColor="@color/labels"
        android:textSize="15dp"
        android:fontFamily="@font/geometria"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_name_input"/>

    <EditText
        android:id="@+id/user_name_input"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/labels"
        android:padding="10dp"
        android:fontFamily="@font/geometria"
        android:textSize="20sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/rounded_border"
        />

    <TextView
        android:id="@+id/label_bithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Дата рождения"
        android:textColor="@color/labels"
        android:textSize="15sp"
        android:fontFamily="@font/geometria"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bithdate_input"/>

    <EditText
        android:id="@+id/bithdate_input"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/labels"
        android:padding="10dp"
        android:fontFamily="@font/geometria"
        android:textSize="20sp"

        android:inputType="date"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_input"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/rounded_border"
        />

    <TextView
        android:id="@+id/label_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email"
        android:textColor="@color/labels"
        android:textSize="15sp"
        android:fontFamily="@font/geometria"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mail_input"/>

    <EditText
        android:id="@+id/mail_input"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/labels"
        android:padding="10dp"
        android:fontFamily="@font/geometria"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bithdate_input"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/rounded_border"
        />

    <Button
        android:id="@+id/button_ready"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mail_input"

        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:text="ГОТОВО"
        android:textColor="@color/white"
        android:fontFamily="@font/geometria"
        android:textSize="15sp"

        android:background="@drawable/rounded_button"/>

    <TextView
        android:id="@+id/label_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Пропустить"
        android:textColor="@color/skip_button"
        android:textSize="20sp"
        android:fontFamily="@font/geometria"

        android:layout_marginTop="10dp"
        android:padding="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ready"/>

</androidx.constraintlayout.widget.ConstraintLayout >